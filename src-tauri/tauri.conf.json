{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "search-app",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "http": {
        "all": true,
        "request": true,
        "scope": ["http://**", "https://**"]
      },
      "shell": {
        "all": true,
        "open": true,
        "execute": true,
        "scope": [{"name":"explorer","cmd": "explorer","args": true},{"name":"shutdown","cmd": "shutdown","args": true}]
      },
      "clipboard": {
        "all": true, 
        "writeText": true,
        "readText": true
      },
      "dialog": {
        "all": true, 
        "ask": true, 
        "confirm": true, 
        "message": true, 
        "open": true,
        "save": true
      },
      "protocol": {
        "asset": true,
        "assetScope": ["**"]
      },
      "fs": {
        "all": true, 
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "copyFile": true,
        "createDir": true,
        "removeDir": true,
        "removeFile": true,
        "exists": true,
        "scope": ["*","d://","e://","f://","g://","h://","j://","i://","/"]
      },
      "os": {
        "all": true 
      },
      "path": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "targets":  ["nsis", "msi", "app", "dmg"] ,
      "identifier": "com.search.tauri",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://releases.myapp.com/{{target}}/{{arch}}/{{current_version}}"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDVDNTBCMDRGQkMyQkI5NjMKUldSanVTdThUN0JRWEdkR0o2WjRJWmFGVlQ0eXhRMzd6K3dTOHNNbVBjZ0E3ZTlpLzBhWDBXQS8K"
    },
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "search-app",
        "width": 1280,
        "height": 900
      }
    ]
  }
}
